public class CalculatorAgain {
    
    public static Integer sumofPositiveIntegers(Integer n) {
        if (n < 0) {
            System.out.println("We are not calculating the sum for negative numbers");
            return null;
        }
        int sum = 0;
        for (int i = 1; i <= n; i++) {
            sum += i;
        }
        return sum;
    }
    
    public static void multiplicationTable(int n) {
        for (int i = 1; i <= 10; i++) {
            System.out.println(i + " x " + n + " = " + i*n);
        }
    }
    
    public static void sumOfSquares(int n) {
        int sum = 0;
        for (int i = 1; i <= n; i++) {
            sum += i*i;
        }
        System.out.println("Input number: " + n);
        System.out.println("The sum of squares from 1 to " + n + " is " + sum);
    }
}
